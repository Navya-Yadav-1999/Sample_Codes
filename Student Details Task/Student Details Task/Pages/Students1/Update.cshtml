@page
@model Student_Details_Task.Pages.Students1.UpdateModel
@{
	var message = ViewData["Message"]?.ToString();
}


<form method="post">

<h1 class="mb-3">Update Student List</h1>

@if (!string.IsNullOrWhiteSpace(message))
	{
		<div class="alert alert-success" role="alert">
			@message
		</div>
	}

<div class="mb-3">
	<label class="form-label">StudentId</label>
	<input type="hidden" class="form-control" asp-for="UpdateStudentView.StudentId" />
</div>

<div class="mb-3">
	<label class="form-label">Name</label>
	<input type="text" class="form-control" asp-for="UpdateStudentView.Name" />
</div>

<div class="mb-3">
	<label class="form-label">Email</label>
	<input type="email" class="form-control" asp-for="UpdateStudentView.Email" />
</div>

<div class="mb-3">
	<label class="form-label">PhoneNo</label>
	<input type="number" class="form-control" asp-for="UpdateStudentView.PhoneNo" />
</div>

<div class="mb-3">
	<button type="submit" class="btn btn-primary">Update</button>
	</div>

	</form>