@page 
@model StudentDetails.Pages.Student1.DeleteModel
@{
	var message = ViewData["Message"]?.ToString();
}



<form method="post">
	<h1 class="mb-3">Delete List</h1>

	@if (!string.IsNullOrWhiteSpace(message))
	{
		<div class="alert alert-success" role="alert">
			@message
		</div>
	}

	<div class="mb-3">
	
		<input type="hidden" class="form-control" asp-for="Student.StudentId"  readonly/>
	</div>

	<div class="mb-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Student.Name" />
	</div>

	<div class="mb-3">
		<label class="form-label">Email</label>
		<input type="email" class="form-control" asp-for="Student.Email" />
	</div>

	<div class="mb-3">
		<label class="form-label">PhoneNo</label>
		<input type="number" class="form-control" asp-for="Student.PhoneNo" />
	</div>

	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Delete</button>
	</div>

</form>
