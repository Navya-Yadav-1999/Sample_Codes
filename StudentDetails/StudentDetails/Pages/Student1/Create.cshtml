@page "/Create"
@model StudentDetails.Pages.CreateModel
@{
	var message = ViewData["Message"]?.ToString();
}


<form method="post">
<h1 class="mb-3">Add new Student</h1>

@if (!string.IsNullOrWhiteSpace(message))
	{
		<div class="alert alert-success" role="alert">
			@message
		</div>
	}
	<div class="mb-3">
   <label class="form-label">Name</label>
   <input type="text" class="form-control" asp-for="StudentRequest.Name" />
</div>

<div class="mb-3">
   <label class="form-label">Email</label>
   <input type="email" class="form-control" asp-for="StudentRequest.Email" />
</div>

<div class="mb-3">
   <label class="form-label">PhoneNo</label>
   <input type="number" class="form-control" asp-for="StudentRequest.PhoneNo" />
</div>

<div class="mb-3">
	<button type="submit" class="btn btn-primary">Save</button>
</div>

</form>