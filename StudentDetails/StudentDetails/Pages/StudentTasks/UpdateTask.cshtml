@page
@model StudentDetails.Pages.StudentTasks.UpdateModel
@{
	var message = ViewData["Message"]?.ToString();
}
}

<form method="post">
	<h1 class="mb-3">Update List</h1>

	@if (!string.IsNullOrWhiteSpace(message))
	{
		<div class="alert alert-success" role="alert">
			@message
		</div>
	}

	<div class="mb-3">
		<label class="form=label">StudentId</label>
		<input type="hidden" class="form-control" asp-for="StudentTask.ProjectId" />
	</div>

	<div class="mb-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="StudentTask.ProjectName" />
	</div>

	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Update</button>
	</div>

</form>
