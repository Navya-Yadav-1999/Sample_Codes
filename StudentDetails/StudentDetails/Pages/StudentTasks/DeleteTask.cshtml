@page
@model StudentDetails.Pages.StudentTasks.DeleteTaskModel
@{
	var message = ViewData["Message"]?.ToString();
}

<form method="post">
	<h1 class="mb-3">Delete List</h1>

	@if (!string.IsNullOrWhiteSpace(message))
	{
		<div class="alert alert-success" role="alert">
			@message
		</div>
	}

	<div class="mb-3">

		<input type="hidden" class="form-control" asp-for="StudentTask.ProjectId" readonly />
	</div>

	<div class="mb-3">
		<label class="form-label">ProjectName</label>
		<input type="text" class="form-control" asp-for="StudentTask.ProjectName" />
	</div>

	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Delete</button>
	</div>

</form>
